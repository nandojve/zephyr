#include <dt-bindings/pinctrl/bl602x-pinctrl.h>

&pinctrl {
	uart0_default: uart0_default {
		group1 {
			pinmux = <GPIO7_UART0_RX>,
				 <GPIO16_UART0_TX>;
			bias-pull-up;
			input-schmitt-enable;
			drive-strength = <1>;
		};
	};

	uart0_sleep: uart0_sleep {
		group1 {
			pinmux = <GPIO7_UART0_RX>,
				 <GPIO16_UART0_TX>;
			bias-high-impedance;
		};
	};
};
